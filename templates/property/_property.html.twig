        <h5 class="card-title">
            <a href="{{path('property.show', {slug: property.slug, id: property.id})}}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text text-left"> {{property.description | nl2br}}</p>
        <p class="card-text"> {{property.city}} ({{property.postalcode}})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold;"> {{property.getFormattedPrice}} â‚¬</div>
    </div>
</div>